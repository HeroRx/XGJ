<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:weightSum="1"    android:background="@color/gray"    android:id="@+id/lv">    <!--标题栏-->    <LinearLayout        android:paddingLeft="20dp"        android:paddingRight="10dp"        android:background="#03a9f4"        android:layout_width="match_parent"        android:layout_height="60dp">        <Button            android:id="@+id/back"            android:layout_gravity="center_vertical"            android:background="@mipmap/arrow_left"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <TextView            android:layout_marginLeft="20dp"            android:id="@+id/tv_head_sch"            android:gravity="center"            android:layout_gravity="center"            android:layout_weight="1"            android:textSize="25sp"            android:textColor="@color/root_bg_color"            android:text="粤安驾校"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <ImageView            android:layout_gravity="center_vertical"            android:src="@mipmap/share"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <View            android:layout_width="10dp"            android:layout_height="match_parent"/>        <ImageView            android:layout_gravity="center_vertical"            android:src="@mipmap/star"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />    </LinearLayout>    <!--滑动view-->    <ScrollView        android:layout_weight="1"        android:layout_width="match_parent"        android:scrollbars="none"        android:layout_height="wrap_content"        >        <!--详细驾校-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">            <ImageView                android:id="@+id/sch_icon"                android:layout_gravity="center_vertical"                android:src="@mipmap/sch"                android:scaleType="fitXY"                android:layout_width="match_parent"                android:layout_height="200dp" />            <View                android:layout_width="match_parent"                android:layout_height="7dp"/>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal"                android:background="@color/root_bg_color">                <LinearLayout                    android:layout_width="0dp"                    android:layout_weight="3"                    android:orientation="vertical"                    android:layout_height="wrap_content"                    android:paddingLeft="27dp"                    android:paddingTop="17dp"                    android:paddingBottom="22dp">                    <TextView                        android:id="@+id/tv_sch"                        android:text="粤安驾校"                        android:textSize="25sp"                        android:textColor="#dc1616"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content" />                    <View                        android:layout_width="match_parent"                        android:layout_height="26dp"/>                    <TextView                        android:id="@+id/tv_sch_detail_location"                        android:textSize="16sp"                        android:textColor="#ababab"                        android:text="地址：广州黄埔长洲深井丰收二街68号(南华工商学院附近)"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content" />                    <TextView                        android:id="@+id/tv_sch_phone"                        android:textColor="#ababab"                        android:textSize="16sp"                        android:text="电话：4000410001"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content" />                </LinearLayout>                <LinearLayout                    android:layout_width="0dp"                    android:layout_weight="1"                    android:orientation="vertical"                    android:layout_height="wrap_content"                    android:paddingRight="15dp"                    android:paddingTop="5dp"                    >                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content">                        <TextView                            android:id="@+id/tv_sch_score_integer"                            android:text="8"                            android:textSize="62sp"                            android:textColor="#06469e"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                        <TextView                            android:text="."                            android:textSize="62sp"                            android:textColor="#06469e"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                        <TextView                            android:id="@+id/tv_sch_score_decimals"                            android:text="0"                            android:textSize="30sp"                            android:textColor="#ffee00"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                    </LinearLayout>                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:paddingTop="5dp">                        <TextView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:background="@mipmap/remark_star"/>                        <TextView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:background="@mipmap/remark_star"/>                        <TextView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:background="@mipmap/remark_star"/>                        <TextView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:background="@mipmap/remark_star"/>                    </LinearLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="10dp"/>                    <Button                        android:background="@mipmap/remark"                        android:layout_width="match_parent"                        android:layout_height="wrap_content" />                </LinearLayout>            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="7dp"/>            <LinearLayout                android:background="@color/root_bg_color"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:paddingLeft="12dp"                android:paddingTop="13dp"                android:orientation="vertical">                <Button                    android:background="@mipmap/sign_up_procedures"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <TextView                    android:id="@+id/tv_sigh_up"                    android:textColor="#000000"                    android:paddingTop="10dp"                    android:text="凡参加机动车驾驶员报名培训的学员"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"  />            </LinearLayout>        </LinearLayout>    </ScrollView>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:paddingTop="10dp"        android:paddingLeft="30dp"        android:paddingRight="30dp"        android:paddingBottom="6dp">        <Button            android:layout_weight="1"            android:background="@mipmap/practice_me"            android:layout_width="wrap_content"            android:layout_height="30dp" />        <View            android:layout_weight="3"            android:layout_height="match_parent"            android:layout_width="0dp" />        <Button            android:layout_weight="1"            android:background="@mipmap/sign_up_me"            android:layout_width="wrap_content"            android:layout_height="30dp" />    </LinearLayout></LinearLayout>