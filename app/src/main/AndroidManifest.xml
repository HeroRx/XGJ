        <activity android:name="com.gzucm.xgj.activity.AppointActivity"></activity>
        <activity android:name="com.gzucm.xgj.activity.MyAppointActivity"></activity>
        <activity android:name="com.gzucm.xgj.activity.SignUpActivity"></activity>
        <activity android:name="com.gzucm.xgj.activity.DriTheoryStudyActivity"></activity>
        <activity android:name="com.gzucm.xgj.activity.ForumActivity"></activity>
